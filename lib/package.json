{
  "name": "react-compare-slider",
  "version": "4.0.0-0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdyman/react-compare-slider.git",
    "directory": "lib"
  },
  "homepage": "https://react-compare-slider.js.org",
  "author": {
    "email": "averynerdyman@gmail.com",
    "name": "nerdyman",
    "url": "https://github.com/nerdyman"
  },
  "description": "A slider component to compare any two React components in landscape or portrait orientation. It supports custom images, videos... and everything else.",
  "keywords": [
    "react",
    "slider",
    "comparison",
    "compare",
    "image",
    "video",
    "canvas",
    "component",
    "image comparison",
    "twentytwenty",
    "portrait",
    "typescript"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      },
      "require": {
        "types": "./dist/components/index.d.cts",
        "default": "./dist/components/index.cjs"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks.d.ts",
        "default": "./dist/hooks.js"
      },
      "require": {
        "types": "./dist/hooks.d.cts",
        "default": "./dist/hooks.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.d.ts"
      },
      "require": {
        "types": "./dist/types.d.cts",
        "default": "./dist/types.d.cts"
      }
    }
  },
  "files": ["src", "dist"],
  "scripts": {
    "dev": "concurrently -k -s first -n \"tsdown,ts\" -c \"blue,cyan\" \"tsdown --watch\" \"pnpm run check --watch --preserveWatchOutput\"",
    "build": "pnpm run check && NODE_ENV=production tsdown",
    "release": "pnpm run release:preflight && pnpm run release:publish",
    "release:preflight": "cp ../README.md ../LICENSE . && pnpm run -w lint && pnpm run -w test && pnpm run build && pnpm run check",
    "release:publish": "release-it",
    "check": "tsc --noEmit"
  },
  "browserslist": ["defaults and fully supports es6-module", "maintained node versions", "ios >= 16.6"],
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "release-it": "^19.2.3",
    "tsdown": "^0.19.0",
    "tslib": "~2.8.1",
    "typescript": "^5.6.2"
  }
}
