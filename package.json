{
  "name": "@this/root",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdyman/react-compare-slider.git"
  },
  "homepage": "https://react-compare-slider.js.org",
  "author": {
    "email": "averynerdyman@gmail.com",
    "name": "nerdyman",
    "url": "https://github.com/nerdyman"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "bootstrap": "corepack enable && pnpm install --frozen-lockfile",
    "clean": "rm -rvf ./node_modules ./docs/*/node_modules ./lib/node_modules ./coverage ./docs/*/coverage ./docs/storybook/storybook-static",
    "lint": "pnpm exec biome check",
    "prepare": "lefthook install",
    "test:ci": "pnpm run --filter @this/storybook test:coverage",
    "test": "pnpm --filter @this/storybook run test:coverage",
    "upgrade-interactive": "pnpm upgrade --interactive --latest --filter='*'"
  },
  "pnpm": {
    "overrides": {
      "react-compare-slider": "workspace:*"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/node": "^24.1.0",
    "lefthook": "^2.0.16"
  }
}
